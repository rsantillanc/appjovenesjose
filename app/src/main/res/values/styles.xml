<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Custom Theme-->
    <style name="MyCustomMaterialTheme" parent="MyMaterialTheme.Base"></style>


    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>


    <style name="button_text" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_sp14</item>
        <item name="android:shadowColor">@color/darkPrimaryColor</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="custom_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/gray_color_2</item>
        <item name="android:textSize">@dimen/txt_sp12</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/edt_dp12</item>
        <item name="android:background">@drawable/edittext_selector</item>
    </style>

    <style name="custom_title_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/accentColor</item>
        <item name="android:textSize">@dimen/txt_sp48</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/gray_color_0</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:alpha">0.9</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/edt_dp12</item>
    </style>

</resources>
